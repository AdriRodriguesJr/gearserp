        </div>
    </main>

    <section class="container my-5">
        <h2 class="text-center mb-4">Como você prefere nos contatar?</h2>
        <div class="row">
            <!-- WhatsApp Card -->
            <div class="col-md-4 mb-4">
                <div class="card h-100 d-flex flex-column">
                    <div class="card-body text-center">
                        <h4 class="card-title">WhatsApp</h4>
                        <p class="card-text">Nos envie uma mensagem clicando abaixo.</p>
                        <a href="https://wa.me/5511987654321" target="_blank" class="btn btn-success mt-auto">
                            <i class="bi bi-whatsapp"></i> WhatsApp
                        </a>
                    </div>
                </div>
            </div>

            <!-- Phone Card -->
            <div class="col-md-4 mb-4">
                <div class="card h-100 d-flex flex-column">
                    <div class="card-body text-center">
                        <h4 class="card-title">Telefone</h4>
                        <p class="card-text">Ligue para nós no número abaixo.</p>
                        <p class="btn btn-primary mt-auto">
                            <i class="bi bi-telephone-fill"></i> +55 11 98765-4321
                        </p>
                    </div>
                </div>
            </div>

            <!-- Email Card -->
            <div class="col-md-4 mb-4">
                <div class="card h-100 d-flex flex-column">
                    <div class="card-body text-center">
                        <h4 class="card-title">Email</h4>
                        <p class="card-text">Preencha os campos que serão exibidos:</p>
                        <button class="btn btn-primary mt-auto" data-bs-toggle="modal" data-bs-target="#emailModal">
                            <i class="bi bi-envelope-fill"></i> Email
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Email Modal -->
        <div class="modal fade" id="emailModal" tabindex="-1" aria-labelledby="emailModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title" id="emailModalLabel">Enviar Email</h4>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form id="contactForm">
                            <div class="mb-3">
                                <label for="name" class="form-label">Nome</label>
                                <input type="text" class="form-control" id="name" name="name" required>
                            </div>
                            <div class="mb-3">
                                <label for="phone" class="form-label">Telefone</label>
                                <input type="tel" class="form-control" id="phone" name="phone">
                            </div>
                            <div class="mb-3">
                                <label for="email" class="form-label">Email</label>
                                <input type="email" class="form-control" id="email" name="email" required>
                            </div>
                            <div class="mb-3">
                                <label for="message" class="form-label">Mensagem</label>
                                <textarea class="form-control" id="message" name="message" rows="4" required></textarea>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
                        <button type="submit" class="btn btn-primary" form="contactForm">Enviar</button>
                    </div>
                </div>
            </div>
        </div>
    </section>

